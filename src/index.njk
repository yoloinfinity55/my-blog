layout: base.njk
title: My Awesome Blog - Home
---

<div class="max-w-5xl mx-auto">
    {# This is a Nunjucks loop. It goes through every item in the "posts" collection. #}
    <div class="flex flex-wrap -mx-2">
        {%- for post in collections.posts | reverse -%}
            <div class="w-full md:w-1/2 lg:w-1/3 self-stretch p-2 mb-4">
                <div class="rounded shadow-md h-full flex flex-col">
                    {# The post.url is automatically generated by Eleventy #}
                    <a href="{{ post.url | url }}">
                        {# In a future step, you can add an image here #}
                    </a>
                    <div class="px-6 py-5 flex-grow">
                        <div class="font-semibold text-lg mb-2">
                            {# post.data.title comes from the front matter #}
                            <a class="text-slate-900 hover:text-teal-600" href="{{ post.url | url }}">{{ post.data.title }}</a>
                        </div>
                        
                        {# We will create the "postDate" filter in a later step #}
                        <p class="text-slate-600 text-sm mb-2" title="Published date">
                            {{ post.data.date | postDate }}
                        </p>

                        {# post.data.description comes from the front matter #}
                        <p class="text-slate-700 text-base">
                            {{ post.data.description }}
                        </p>
                    </div>
                </div>
            </div>
        {%- endfor -%}
    </div>
</div>